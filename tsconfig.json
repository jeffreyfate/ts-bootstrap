{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": ".build",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "esnext"
    ],
    "rootDir": "./",
    "types": [
      "chai",
      "mocha",
      "node",
      "reflect-metadata"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ]
}